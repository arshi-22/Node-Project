extends layout

block content

        style
                include ./css/style.css

        h1 #{title}
        form(method = 'POST', action = '/movie/edit/'+movie._id)
                #form-group
                        label Title
                        br
                        input.from-control(name = "title",type='text',value=movie.title)
                br
                #form-group
                        label Type
                        br
                        input.from-control(name = "type",type='text',value=movie.type)
                br
                #form-group
                        label Body
                        br
                        textarea.from-control(name = "body")= movie.body)
                br
                br
        
                div.rating
                        input(type="checkbox" name=star id="star1") 
                        input(type="checkbox" name=star id="star2")
                        input(type="checkbox" name=star id="star3")
                        input(type="checkbox" name=star id="star4")
                        input(type="checkbox" name=star id="star5")
                        
                hr
                input.btn.btn-primary(type="submit",value="submit")
                br
